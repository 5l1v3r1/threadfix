        <td><input type="radio"  ng-model="currentRole.canManageWafs" id="canManageWafsTrue" name="canManageWafs" ng-value="true" /></td>
        <td><input type="radio"  ng-model="currentRole.canManageWafs" id="canManageWafsFalse" name="canManageWafs" ng-value="false" /></td>
         <td style="border: 0 solid black; background-color: white; padding-left: 5px">
          <form:errors id="canManageWafsError" name="canManageWafs"
