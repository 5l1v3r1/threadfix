      <tr>
        <td><label>Modify Vulnerabilities</label></td>
        <td><input type="radio"  ng-model="currentRole.canModifyVulnerabilities" id="canModifyVulnerabilitiesTrue" name="canModifyVulnerabilities" ng-value="true" /></td>
        <td><input type="radio" id="canModifyVulnerabilitiesFalse" ng-model="currentRole.canModifyVulnerabilities" name="canModifyVulnerabilities" ng-value="false" /></td>
        <td style="border: 0 solid black; background-color: white; padding-left: 5px">
          <form:errors id="canModifyVulnerabilitiesError"
                       name="canModifyVulnerabilities" cssClass="errors" />
        </td>
      </tr>
      <tr>
        <td><label>Comment On Vulnerabilities</label></td>
        <td>
          <input type="radio"
                 ng-model="currentRole.canSubmitComments"
                 id="canSubmitCommentsTrue"
                 name="canSubmitComments"
                 ng-value="true" />
        </td>
        <td>
          <input type="radio"
                 ng-model="currentRole.canSubmitComments"
                 id="canSubmitCommentsFalse"
                 name="canSubmitComments"
                 ng-value="false" />
        </td>
      </tr>
      <tr>
        <td><label>Manage Vulnerability Filters</label></td>
        <td><input type="radio"  ng-model="currentRole.canManageVulnFilters" id="canManageVulnFiltersTrue" name="canManageVulnFilters" ng-value="true" /></td>
        <td><input type="radio" id="canManageVulnFiltersFalse" ng-model="currentRole.canManageVulnFilters" name="canManageVulnFilters" ng-value="false" /></td>
         <td style="border: 0 solid black; background-color: white; padding-left: 5px">
