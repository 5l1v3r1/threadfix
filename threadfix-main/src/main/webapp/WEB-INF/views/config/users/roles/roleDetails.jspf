        <td><label>Submit Defects</label></td>
        <td><input type="radio"  ng-model="currentRole.canSubmitDefects" id="canSubmitDefectsTrue" name="canSubmitDefects" ng-value="true" /></td>
        <td><input type="radio"  ng-model="currentRole.canSubmitDefects" id="canSubmitDefectsFalse" name="canSubmitDefects" ng-value="false" /></td>
      </tr>
      <tr>
        <td><label>Upload Scans</label></td>
        <td><input type="radio"  ng-model="currentRole.canUploadScans" id="canUploadScansTrue" name="canUploadScans" ng-value="true" /></td>
