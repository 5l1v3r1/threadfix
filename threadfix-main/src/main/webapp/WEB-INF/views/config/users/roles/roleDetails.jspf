<h2>Role Details</h2>

<div ng-hide="currentRole">No Role Selected</div>

<div ng-if="currentRole"
     class="user-page"
     ng-form="roleForm">

    <table class="dataTable">
      <tbody>
      <tr>
        <td><label>Name</label></td>
        <td class="inputValue">
          <input id="roleNameInput" type="text" name="displayName" focus-on="focusInput" ng-model="currentRole.displayName"
                 size="70" maxlength="25" required/>
        </td>
        <td>
            <span id="roleNameInputRequiredError" class="errors" ng-show="roleForm.displayName.$dirty && roleForm.displayName.$error.required">Name is required.</span>
            <span id="roleNameInputLengthError" class="errors" ng-show="roleForm.displayName.$dirty && roleForm.displayName.$error.maxlength">Maximum length is 25.</span>
            <span id="roleNameInputNameError" class="errors" ng-show="currentRole.displayName_error"> {{ currentRole.displayName_error }}</span>
        </td>
      </tr>
      </tbody>
    </table>

    <%@include file="roleButton.jspf"%>
    <a class="btn" ng-click="setAll(true)">Select All</a>
    <a class="btn" ng-click="setAll(false)">Select None</a>

    <table class="table perms-table" style="margin-top: 5px">
      <thead>
      <tr>
        <th class="long first">Permission</th>
        <th class="short" style="text-align: center;">Yes</th>
        <th class="short last" style="text-align: center;">No</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td><label>Generate Reports</label></td>
        <td><input type="radio" id="canGenerateReportsTrue" name="canGenerateReports" ng-model="currentRole.canGenerateReports" ng-value="true" /></td>
        <td><input type="radio" id="canGenerateReportsFalse" name="canGenerateReports" ng-model="currentRole.canGenerateReports" ng-value="false" /></td>
        <td style="border: 0 solid black; background-color: white; padding-left: 5px">
          <form:errors id="canGenerateReportsError"
                       name="canGenerateReports" cssClass="errors" />
        </td>
      </tr>
      <tr>
        <td><label>Generate WAF Rules</label></td>
        <td><input type="radio" id="canGenerateWafRulesTrue" name="canGenerateWafRules" ng-model="currentRole.canGenerateWafRules" ng-value="true" /></td>
        <td><input type="radio" id="canGenerateWafRulesFalse" name="canGenerateWafRules" ng-model="currentRole.canGenerateWafRules" ng-value="false" /></td>
        <td style="border: 0 solid black; background-color: white; padding-left: 5px">
          <form:errors id="canGenerateWafRulesError"
                       name="canGenerateWafRules" cssClass="errors" />
        </td>
      </tr>
      <tr>
        <td><label>Manage API Keys</label></td>
        <td><input type="radio"  ng-model="currentRole.canManageApiKeys" id="canManageApiKeysTrue" name="canManageApiKeys" ng-value="true" />
        </td>
        <td><input type="radio"  ng-model="currentRole.canManageApiKeys" id="canManageApiKeysFalse" name="canManageApiKeys" ng-value="false" />
        </td>
         <td style="border: 0 solid black; background-color: white; padding-left: 5px">
          <form:errors id="canManageApiKeysError" name="canManageApiKeys"
                       cssClass="errors" />
        </td>
      </tr>
      <tr>
        <td><label>Manage Applications</label></td>
        <td><input type="radio" id="canManageApplicationsTrue" name="canManageApplications" ng-model="currentRole.canManageApplications" ng-value="true" /></td>
        <td><input type="radio" id="canManageApplicationsFalse" name="canManageApplications" ng-model="currentRole.canManageApplications" ng-value="false" /></td>
         <td style="border: 0 solid black; background-color: white; padding-left: 5px">
          <form:errors id="canManageApplicationsError"
                       name="canManageApplications" cssClass="errors" />
        </td>
      </tr>
      <tr>
        <td><label>Manage GRC Tools</label></td>
        <td><input type="radio" id="canManageGrcToolsTrue" name="canManageGrcTools" ng-model="currentRole.canManageGrcTools" ng-value="true" /></td>
        <td><input type="radio" id="canManageGrcToolsFalse" name="canManageGrcTools" ng-model="currentRole.canManageGrcTools" ng-value="false" /></td>
         <td style="border: 0 solid black; background-color: white; padding-left: 5px">
          <form:errors id="canManageGrcToolsError"
                       name="canManageGrcTools" cssClass="errors" />
        </td>
      </tr>
      <tr>
        <td><label>Manage Defect Trackers</label></td>
        <td><input type="radio" id="canManageDefectTrackersTrue" name="canManageDefectTrackers" ng-model="currentRole.canManageDefectTrackers" ng-value="true" /></td>
        <td><input type="radio" id="canManageDefectTrackersFalse" name="canManageDefectTrackers" ng-model="currentRole.canManageDefectTrackers" ng-value="false" /></td>
         <td style="border: 0 solid black; background-color: white; padding-left: 5px">
          <form:errors id="canManageDefectTrackersError"
