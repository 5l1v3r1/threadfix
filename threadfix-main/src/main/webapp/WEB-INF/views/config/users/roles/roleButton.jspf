<button id="loadingButton"
        disabled="disabled"
        class="btn btn-primary"
        ng-show="loading">
  <span class="spinner"></span>
  Submitting
</button>
<button id="submit"
        ng-class="{ disabled : valid(form, role) }"
        class="btn btn-primary"
        ng-mouseenter="form.name.$dirty = true"
        ng-hide="loading"
        ng-click="ok(form.$valid)">Save Changes</button>