        <td><input type="radio" id="canManageRemoteProvidersFalse" ng-model="currentRole.canManageRemoteProviders" name="canManageRemoteProviders" ng-value="false" /></td>
         <td style="border: 0 solid black; background-color: white; padding-left: 5px">
          <form:errors id="canManageRemoteProvidersError"
                       name="canManageRemoteProviders" cssClass="errors" />
        </td>
      </tr>
      <tr>
        <td><label>Manage Scan Agents</label></td>
        <td><input type="radio" id="canManageScanAgentsTrue" name="canManageScanAgents" ng-model="currentRole.canManageScanAgents" ng-value="true" /></td>
        <td><input type="radio" id="canManageScanAgentsFalse" ng-model="currentRole.canManageScanAgents" name="canManageScanAgents" ng-value="false" /></td>
        <td style="border: 0 solid black; background-color: white; padding-left: 5px">
          <form:errors id="canManageScanAgentsError"
                       name="canManageScanAgents" cssClass="errors" />
        </td>
      </tr>
      <tr>
        <td><label>Manage System Settings</label></td>
        <td><input type="radio" id="canManageSystemSettingsTrue" name="canManageSystemSettings" ng-model="currentRole.canManageSystemSettings" ng-value="true" /></td>
        <td><input type="radio" id="canManageSystemSettingsFalse" ng-model="currentRole.canManageSystemSettings" name="canManageSystemSettings" ng-value="false" /></td>
        <td style="border: 0 solid black; background-color: white; padding-left: 5px">
          <form:errors id="canManageSystemSettingsError"
                       name="canManageSystemSettings" cssClass="errors" />
        </td>
      </tr>
      <tr>
        <td><label>Manage Roles</label></td>
        <td><input type="radio"  ng-model="currentRole.canManageRoles" id="canManageRolesTrue" name="canManageRoles" ng-value="true" /></td>
        <td><input type="radio"  ng-model="currentRole.canManageRoles" id="canManageRolesFalse" name="canManageRoles" ng-value="false" /></td>
        <td style="border: 0 solid black; background-color: white; padding-left: 5px">
          <form:errors id="canManageRolesError" name="canManageRoles"
                       cssClass="errors" />
